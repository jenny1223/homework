@model List<homework.Models.MyClass>
@{

    int i = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @foreach (var item in Model)
            {

                i += 1;
                <tr>
                    <td>@i</td>
                    <td>@item.Type</td>
                    <td>@item.Time</td>
                    <td>@item.Money</td>
                </tr>
            }
        </table>
    </div>
</div>




